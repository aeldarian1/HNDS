{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ES2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "declaration": false,
    "sourceMap": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "isolatedModules": true
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
